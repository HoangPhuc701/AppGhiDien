<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgound_intro"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            android:layout_height="match_parent"
            android:layout_span="2"
            android:gravity="center"
            android:paddingTop="150dp"
            android:text="ĐĂNG KÝ"
            android:textColor="#FF3333"
            android:textSize="30sp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow android:layout_marginTop="20dp">
        <TextView
            android:text="Họ Và Tên "
            android:textColor="#000011"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/dkTen"
            android:hint="Nhập họ và tên" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Ngày Sinh "
            android:textColor="#000011"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/dkngaysinh"
            android:hint="dd/mm/yyyy"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Đặt Mật Khẩu "
            android:textColor="#000011"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/dkmatkhau"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword" />
    </TableRow>



    <TableRow>
        <TextView
            android:text="Chức Vụ "
            android:textColor="#000011"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinner_ChucVu"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"/>
    </TableRow>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dkdangky"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Đăng ký"
            app:backgroundTint="@color/purple_200" />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_trangchu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/menu_bottom_nav" />
</TableLayout>