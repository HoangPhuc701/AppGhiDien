<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgound_intro"
    tools:context=".AddDongHo">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_dongho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/menu_bottom_lapdat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="Mã Nhà: "
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edMaNha"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nhập mã nhà" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:text="Địa Chỉ: "
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edDiaChiDH"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="60dp"
        android:hint="Nhập địa chỉ đồng hồ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:text="Mã DH: "
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edMaDH"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp"
        android:hint="Nhập mã đồng hồ" />

    <TextView
            android:id="@+id/tv_hinhthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="Chọn Hình Thức Sử Dụng"
            android:textColor="#000"
            android:textSize="15dp" />
    <Spinner
        android:id="@+id/spinner_HinhThuc"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_hinhthuc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/btn_dropdown" />

    <TextView
        android:id="@+id/tv_capdienap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:text="Chọn Cấp Điện Áp"
        android:textColor="#000"
        android:textSize="15dp" />
    <Spinner
        android:id="@+id/spinner_capdienap"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_capdienap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/btn_dropdown" />

    <TextView
        android:id="@+id/tv_loai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:text="Chọn Loại Đồng Hồ"
        android:textColor="#000"
        android:textSize="15dp" />
    <Spinner
        android:id="@+id/spinner_loai"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_loai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/btn_dropdown" />

    <Button
        android:id="@+id/btnadddongho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:text="Lưu" />

</RelativeLayout>